<script>
    const menus = document.querySelectorAll(".main-menu li");
    const subMenu = document.querySelector(".sub-menu");
    const playMenu = document.querySelector(".play-sub-menu");
    const eatMenu = document.querySelector(".eat-sub-menu");
    const mains = document.querySelectorAll("main");
    menus.forEach((menu)=>{
         menu.addEventListener('mouseenter',(e)=>{
             const menuName = e.target.innerText;
             subMenu.classList.add("menu-block");
           

             if(menuName === "즐길거리"){
                 eatMenu.classList.remove("selected-sub-menu");
                 playMenu.classList.add("selected-sub-menu");
                 mains.forEach((main)=>{
                 main.classList.add("menu-opened");
             })

                
             }
             else if(menuName === "먹거리"){
                 playMenu.classList.remove("selected-sub-menu");
                 eatMenu.classList.add("selected-sub-menu");
                 mains.forEach((main)=>{
                 main.classList.add("menu-opened");
             })

             }else{
                 subMenu.classList.remove("menu-block");
                 mains.forEach((main)=>{
                 main.classList.remove("menu-opened");
             })
             }
         });
        
    })

    subMenu.addEventListener('mouseleave',(e)=>{
         subMenu.classList.remove("menu-block");
         mains.forEach((main)=>{
            main.classList.remove("menu-opened");
             })
         
        })


          $(function() {
  var body = $('#starshine'),
      template = $('.template.shine'),
      stars =  500,
      sparkle = 20;
  
    
  var size = 'small';
  var createStar = function() {
    template.clone().removeAttr('id').css({
      top: (Math.random() * 100) + '%',
      left: (Math.random() * 100) + '%',
      webkitAnimationDelay: (Math.random() * sparkle) + 's',
      mozAnimationDelay: (Math.random() * sparkle) + 's'
    }).addClass(size).appendTo(body);
  };
 
  for(var i = 0; i < stars; i++) {
    if(i % 2 === 0) {
      size = 'small';
    } else if(i % 3 === 0) {
      size = 'medium';
    } else {
      size = 'large';
    }
    
    createStar();
  }
});
 </script>
